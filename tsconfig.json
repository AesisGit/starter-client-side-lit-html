{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "baseUrl": ".",
    "sourceMap": true,
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
