{
  "name": "@rxdi/starter-client-lit-html",
  "version": "0.4.2",
  "main": "src/main.ts",
  "scripts": {
    "start": "parcel ./src/index.html",
    "build": "parcel build ./src/index.html ",
    "lint": "npx tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "deploy": "firebase deploy",
    "introspect": "gapi schema introspect --collect-documents --collect-types"
  },
  "author": "Kristiyan Tachev",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@gapi/core": "^1.7.2",
    "@rxdi/core": "0.5.16",
    "@rxdi/graphql-client": "0.5.16",
    "@rxdi/lit-html": "0.5.16",
    "@rxdi/router": "0.5.16",
    "@rxdi/ui-components": "git+https://github.com/rxdi/ui-components.git",
    "@webcomponents/webcomponentsjs": "^1.2.4"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "cross-fetch": "^3.0.3",
    "document-register-element": "^1.13.2",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "rootDir": "./",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "__DEV__": true,
      "PATH": "http://localhost:4444"
    },
    "transform": {
      "\\.(ts|tsx|js)$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "./jest-setup.ts"
    ],
    "moduleNameMapper": {
      "^@rxdi/graphql-client$": "<rootDir>/node_modules/@rxdi/graphql-client/dist/index.js",
      "^@rxdi/lit-html$": "<rootDir>/node_modules/@rxdi/lit-html/dist/index.js",
      "^@webcomponents/custom-elements$": "<rootDir>/node_modules/@webcomponents/webcomponentsjs/custom-elements-es5-adapter.js"
    },
    "testRegex": "/src/.*\\.spec.(ts|tsx)$",
    "verbose": true,
    "collectCoverage": true
  }
}
